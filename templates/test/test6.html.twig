{% extends 'base.html.twig' %}

{% block body %}

<h1>Liste des pays</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</td>
            <th>Nom</th>
            <th>Population</th>
            <th>Drapeau</th>
        </tr>
    </thead>
    <tbody>
       {% for country in countries %}
        <tr>
            <td>{{ country.id }}</td>
            <td>
                <a href="{{ path('country_detail', {id: country.id}) }}">{{ country.name }}</a>
            </td>
            <td>{{ country.population }}</td>
            <td>
                <img class="country" src="{{ country.fakeFlag() }}" alt="{{ country.name }}">
            </td>
        </tr>
       {% endfor %}
    </tbody>
</table>

{% endblock %}

