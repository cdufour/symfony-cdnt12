{% extends 'base.html.twig' %}

{% block body %}

<h1>{{ title }}</h1>

<p>Valeur recherchée: {{ searchedValue }}</p>
<p>Méthode HTTP utilisée: {{ method }}</p>

{# commentaire Twig #}

{% if title == 'Test 3'  %}
    <p>C'est le bon titre</p>
{% else %}
    <p>Ce n'est pas le bon titre</p>
{% endif  %}

<h2>{{ students|length }} étudiants</h2>
<ul>
    {% for student in students %}
        <li>{{ student|upper }}</li>
    {% endfor %}
</ul>

{% endblock %}

